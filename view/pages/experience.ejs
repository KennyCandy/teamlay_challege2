 <div class="tab-pane fade" id="experience">
    <h4> Experience</h4>
    <hr/>  
         <form class="form-horizontal" id="validation_form_exp" >
                <div class="form-group row">
                        <label class="col-sm-3 col-lg-2 control-label">Company</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <input type="text" placeholder="Enter your company" name="company" id="company" class="form-control" data-rule-required="true" data-rule-minlength="2" > 
                                <span for="company" class="help-block">This field is required.</span>
                            </div>    
                </div>
                <!-Designation->
                <div class="form-group row">
                        <label class="col-sm-3 col-lg-2 control-label">Designation</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <input type="text" placeholder="Enter your designation" name="designation" id="designation" class="form-control" >
                            </div>    
                </div>
                <!-Date(s)->
                <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Date(s)</label>
                            <div class="col-sm-5 col-lg-10 controls">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" placeholder="From date To date" class="form-control date-range" id="date" data-rule-required="true" readonly="readonly"/>                            
                                </div>
                                <span for="firstname" class="help-block">This field is required.</span>
                            </div>
                </div>
                <!-Details-> 
                <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Details</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <textarea class="form-control col-md-12 wysihtml5" rows="6" id="detail"></textarea>
                        </div>
                </div>
                <div class="form-group row">
                        <label class="col-sm-3 col-lg-2 control-label">&nbsp;</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            
                            <button type="button" id="btnAddListExp"  class="btn btn-success"><i class="fa fa-plus">&nbsp;Add To List</i></button>
                            <button type="button" id="btnSaveExp" class="btn btn-success" style="display:none"><i class="fa fa-save">&nbsp;Save</i></button>
                        </div> 
                                
                </div>
                
                <div class="form-group row">
                
                
                    <div class="box">
                        <div class="box-title">
                        <h4> List of Experience</h4>
                        </div>
                        <div class="box-content">
                            <div class="table-big">
                                <table class="table table-striped table-hover fill-head" id="list-experience">
                                <thead>
                                    <tr style="font-size: 13px">
                                    <th>Company</th>
                                    <th>Designation</th>
                                    <th>Date(s)</th>
                                    <th>Details</th>
                                    <th>Action</th>
                                    </tr>
                                </thead>
                                    <tbody>  
                                                                 
                                    </tbody>
                                    </table>
                            </div>
                        </div>         
                            
                    </div>            
                </div>    
        </form>    
</div>
<script type="text/javascript" src="js/experience.validate.js"></script>